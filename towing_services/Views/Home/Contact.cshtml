        function clearError() {
            errorSpan.textContent = "";
        }

        // التحقق من صلاحية رقم الهاتف
        function isPhoneNumberValid() {
            const code = areaCode.value;
            const number = phoneNumber.value.replace(code, "").trim(); // إزالة رمز الدولة للتحقق فقط من الرقم
