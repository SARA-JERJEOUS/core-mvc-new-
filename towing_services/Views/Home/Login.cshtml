@model towing_services.Models.LoginDriverViewModel
<style>
    .toggle-password {
        background: none; /* إزالة الخلفية */
        border: none; /* إزالة الإطار */
        font-size: 20px; /* تكبير الأيقونة */
        color: #333; /* لون الأيقونة */
        cursor: pointer;
        padding: 0 10px; /* ضبط الحواف */
        position: absolute;
        right: 10px; /* تثبيت الأيقونة على يمين الحقل */
        top: 50%;
        transform: translateY(-50%); /* توسيط الأيقونة عموديًا */
    }

        /* تأثير عند تمرير الماوس على الأيقونة */
        .toggle-password:hover {
            color: #007bff; /* تغيير اللون عند المرور */
            transform: translateY(-50%) scale(1.1); /* تأثير تكبير طفيف */
        }

    body {
        background: #f0f0f0;
    }

    .form-label {
        color: black !important;
        font: bolder;
        font-size: 26px
    }

    .card {
        background: linear-gradient(135deg, #f4f4f4, #ffffff);
        border-radius: 10px;
        width:100%;
        max-width: 900px;
        justify-content: center;
        margin: 0 auto;
        box-shadow: 4px 4px 10px #3b5bdb, -4px -4px 10px #033E3E;
    }

    @@keyframes slideUp {
        0% {
            transform: translateY(30px); /* يبدأ من الأسفل */
            opacity: 0; /* الشفافية تكون صفر */
        }

        100% {
            transform: translateY(0); /* يصل إلى مكانه الطبيعي */
            opacity: 1; /* الشفافية تصبح 1 */
        }
    }

    /* تطبيق الحركة على الكارد */
    .card {
        animation: slideUp 0.8s ease-in-out; /* التأثير يستمر لمدة 0.8 ثانية */
    }



    .wave-background {
        height: 5vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .hero-text span:first-child {
        color: #033E3E; /* لون الحرف الأول */
    }





    @@keyframes waveEffect {
        0% {
            background-position: 20% 0;
        }

        100% {
            background-position: 0 0;
        }
    }

    @@keyframes colorShift {
        0% {
            background: linear-gradient(46deg, #162252, #368BC1 50%, #3090C7);
        }

        100% {
            background: linear-gradient(46deg, #3090C7, #368BC1 50%, #162252);
        }
    }


    /* التنسيق الأساسي للنص */
    .hero-text {
        font-weight: bold;
        margin:0 auto;
        text-align: center;
        display: inline-block;
        word-wrap: break-word; /* يضمن أن النص ينكسر بشكل صحيح داخل الـ div */
    }

        /* تجزئة الكلمة إلى حروف */
        .hero-text span {
            opacity: 0; /* إخفاء الحروف في البداية */
            display: inline-block;
            transform: translateY(-30px); /* يبدأ من أعلى */
            animation: showLetter 1s ease-out forwards;
            font-size: 4rem;
            color: #a5c9e1;
        }

            /* إضافة تأخير بين الحروف */
            .hero-text span:nth-child(1) {
                animation-delay: 0s;
            }

            .hero-text span:nth-child(2) {
                animation-delay: 0.2s;
            }

            .hero-text span:nth-child(3) {
                animation-delay: 0.4s;
            }

            .hero-text span:nth-child(4) {
                animation-delay: 0.6s;
            }

            .hero-text span:nth-child(5) {
                animation-delay: 0.8s;
            }




    .space {
        display: inline-block;
        width: 18px;
    }

    @@keyframes showLetter {
        0% {
            opacity: 0;
            transform: translateY(-30px); /* يبدأ من أعلى */
        }

        100% {
            opacity: 1;
            transform: translateY(0); /* يظهر في مكانه الطبيعي */
        }
    }

    @@media (max-width: 915px) {
        .hero-text span {
            font-size: 3rem;
        }
    }

    @@media (max-width: 576px) {
        .hero-text span {
            font-size: 2rem;
        }
    }
    /* زر */
    .btn {
        position: relative;
        padding: 0.60em 1.5em;
        background-color: #38ACEC;
        border: 4px solid #fff; /* تحديد حدود الزر بلون أبيض */
        color: black;
        font-size: 1.2rem;
        text-transform: uppercase;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        overflow: hidden;
        transition: color 0.3s, border-color 0.3s;
        z-index: 1;
    }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background-color: #15317E;
            transition: left 0.5s ease;
            z-index: -1;
        }


        .btn:hover {
            color: black;
            border-color: #3b5bdb;
        }

            .btn:hover::before {
                left: 0;
            }

        .btn:hover {
            color: #ddd;
        }

    .form-control {
        font-size: 25px;
        background-color: transparent;
        border: none;
        border-bottom: 3px solid #007bff;
        border-radius: 0;
    }

        .form-control:focus {
            border-bottom: 3px solid #033E3E;
            box-shadow: none;
            background-color: transparent;
        }

    .sp {
        color: blue !important;
        font-size: 22px
    }


    .cardo {
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .form-control {
        height: 40px;
        font-size: 30px;
    }

    @@media (max-width: 768px) {
        .sp {
            color: blue !important;
            font-size: 16px
        }

        .form-label {
            font-size: 18px
        }

        .form-control {
            height: 30px;
            font-size: 18px;
        }

    }

    .form-check {
        margin-bottom: 20%
    }
    .alert {
        background-color: #1a1a3c; /* خلفية داكنة */
        color: white; /* نص أبيض */
        margin: 10px auto; /* محاذاة في المنتصف */
        width: 40%; /* عرض النص فقط حسب حجمه */
        max-width: 80%; /* أقصى عرض 80% */
        text-align: center; /* محاذاة النص في المنتصف */
        border-radius: 5px; /* حدود دائرية */
        padding:1%;
        font-size:24px
    }
    /* استعلام وسائط للأجهزة الصغيرة */
    @@media (max-width: 768px) {
        .alert {
            width: 70%; /* تغيير العرض للأجهزة الصغيرة */
            font-size: 20px; /* تقليل حجم الخط */
        }
    }

    /* استعلام وسائط للأجهزة الأصغر من 480px */
    @@media (max-width: 480px) {
        .alert {
            width: 90%; /* عرض أكبر للأجهزة الصغيرة جدًا */
            font-size: 18px; /* تقليل حجم الخط أكثر */
        }
    }
    .form-check-input {
        border-color: #007bff; /* تغيير لون البوردر عند الفوكس (أزرق) */
        border: 3px solid #007bff; /* إضافة حدود خفيفة باللون الرمادي */
    }
    .form-check-input:focus {
        border-color: #007bff; /* تغيير لون البوردر عند الفوكس (أزرق) */
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* تأثير ظل عند الفوكس */
    }

    .form-check-input:checked {
        border-color: #007bff; /* تغيير لون البوردر عند تحديد المربع */
    }
    /* تنسيق القائمة المنسدلة */
    .nav-item .dropdown-menu {
        background-color: #f0f0f0; /* لون الخلفية */
        border: none;
        border-radius: 20px; /* زوايا مستديرة */
        box-shadow: 0px 8px 15px rgb(6 34 57 / 0.10); /* ظل ناعم */
        padding: 4px;
        /* إبعاد القائمة عن الحافة اليمنى */
        margin-left: -50px; /* إضافة مسافة من الحافة اليمنى */
    }


    /* عناصر القائمة المنسدلة */
    .dropdown-item {
        font-size: 18px;
        color: #333;
        padding: 10px 20px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        /* تأثير عند المرور على عنصر القائمة المنسدلة */
        .dropdown-item:hover {
            background-color: #0b2644; /* لون الخلفية عند المرور */
            color: #fff; /* لون النص عند المرور */
            transform: scale(1.05); /* تكبير بسيط */
        }

    /* تصميم السهم */
    .nav-link.dropdown-toggle::after {
        content: ' ▼'; /* إضافة سهم */
        font-size: 12px;
        color: inherit; /* نفس لون النص */
        margin-left: 5px;
        transition: transform 0.3s ease;
    }

    /* دوران السهم عند الفتح */
    .nav-link.dropdown-toggle[aria-expanded="true"]::after {
        transform: rotate(180deg);
    }

    /* تأثير الظهور التدريجي للقائمة */
    .nav-item .dropdown-menu {
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

        /* عند عرض القائمة */
        .nav-item .dropdown-menu.show {
            opacity: 1;
            transform: translateY(0);
        }
</style>



