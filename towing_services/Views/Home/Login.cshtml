<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card">
                <div class="card-body">

                    <form asp-action="Login" method="post" style="max-width: 600px;">
                        <div class="row">

                            <div class="form-group ">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" style=" " autocomplete="off" />
                                @*<span asp-validation-for="Email" class="sp"></span>*@
                            </div>

                            <div class="form-group">
                                <label asp-for="Password" class="form-label"></label>
                                <div class="input-group" style="position: relative;">
                                    <input asp-for="Password" class="form-control" id="password" autocomplete="off" />
                                    <span class="input-group-text toggle-password" onclick="togglePassword()">👁️</span>
                                </div>

                                @*<span asp-validation-for="Password" class="sp"></span>*@

                                <a asp-action="ForgotPassword" class="btn-link bton" style="color: #A45848; margin-top: 40px; display: block; text-align: center;font-size:24px ">Forgot Password?</a>

                            </div>
                            <div class="form-check d-flex align-items-center" style="gap: 20px; margin-top: 15px; margin-bottom: 20px;">
                                <input asp-for="RememberMe" class="form-check-input" style="width: 30px; height: 30px; margin-left: -13px;" />
                                <label asp-for="RememberMe" class="form-check-label" style="font-size: 20px; margin-left: 20px; font-weight: bolder;">
                                    Remember Me
                                </label>
                            </div>





                            <div class="cardo">
                                <button type="submit" class="btn">Login</button>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <span style="font-size: 22px;">Don't have an account? </span>
                            <a asp-action="Register" class="btn-link" style="font-size: 22px; color: #007bff; text-decoration: underline;">Register here</a>
                        </div>


                        @*<a href="@Url.Action("ExternalLogin", "Home", new { provider = "Google" })">Login with Google</a>*@

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

