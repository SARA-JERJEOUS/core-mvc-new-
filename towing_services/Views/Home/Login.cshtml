<script>
    window.onload = function () {
        var rememberMeCheckbox = document.querySelector('[asp-for="RememberMe"]');
        if (document.cookie.includes(".AspNetCore.Identity.Application")) {
            rememberMeCheckbox.checked = true;
        }
    };
    function togglePassword() {
        const passwordField = document.getElementById("password");
        const toggleIcon = document.querySelector(".toggle-password");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            toggleIcon.textContent = "👁️‍🗨️"; // تبديل الأيقونة عند عرض كلمة المرور
        } else {
            passwordField.type = "password";
            toggleIcon.textContent = "👁️"; // تبديل الأيقونة عند إخفاء كلمة المرور
        }
    }


</script>


