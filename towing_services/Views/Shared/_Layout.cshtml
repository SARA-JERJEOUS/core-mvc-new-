        /* تنسيق الزر Back to top ليكون دائريًا */
        .back-to-top {
            position: fixed; /* لتثبيت الزر في مكانه */
            right: 20px; /* المسافة عن الجهة اليمنى */
            bottom: 80px; /* المسافة عن أسفل الصفحة */
            z-index: 1000; /* لضمان أن الزر فوق العناصر الأخرى */
            display: none; /* إخفاء الزر بداية */
        }


        .bae {
            border-radius: 50%;
            padding: 5px 8px;
            background-color: red;
            color: black;
            font-weight: bold;
            position: relative;
            top: -5px;
            right: -5px;
        }

        .nav-item .nav-link {
            font-size: 20px;
            color: black;
            font-weight: bold;
            text-transform: uppercase;
            transition: all 0.3s ease; /* تأثير التحول السلس */
        }


        /* تنسيق القائمة المنسدلة */
        .nav-item .dropdown-menu {
            background-color: #f0f0f0; /* لون الخلفية */
            border: none;
            border-radius: 20px; /* زوايا مستديرة */
            box-shadow: 0px 8px 15px rgb(6 34 57 / 0.10); /* ظل ناعم */
            padding: 4px;
            /* إبعاد القائمة عن الحافة اليمنى */
            margin-left: -50px; /* إضافة مسافة من الحافة اليمنى */
        }


        /* عناصر القائمة المنسدلة */
        .dropdown-item {
            font-size: 18px;
            color: #333;
            padding: 10px 20px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            /* تأثير عند المرور على عنصر القائمة المنسدلة */
            .dropdown-item:hover {
                background-color: #0b2644; /* لون الخلفية عند المرور */
                color: #fff; /* لون النص عند المرور */
                transform: scale(1.05); /* تكبير بسيط */
            }

        /* تصميم السهم */
        .nav-link.dropdown-toggle::after {
            content: ' ▼'; /* إضافة سهم */
            font-size: 12px;
            color: inherit; /* نفس لون النص */
            margin-left: 5px;
            transition: transform 0.3s ease;
        }

        /* دوران السهم عند الفتح */
        .nav-link.dropdown-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        /* تأثير الظهور التدريجي للقائمة */
        .nav-item .dropdown-menu {
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

            .nav-item .dropdown-menu.show {
                opacity: 1;
                transform: translateY(0);
            }

        @@media (max-width: 768px) {
            /* تعديل التصميم ليتناسب مع الشاشات الصغيرة */
            .nav-item .dropdown-menu {
                position: static; /* اجعلها داخل التدفق الطبيعي */
                margin-right: 0;
                margin-left: 0;
                width: 100%; /* اجعل القائمة تمتد بعرض الشاشة */
                box-shadow: none; /* إزالة الظلال */
            }

            .dropdown-item {
                font-size: 16px; /* تصغير النص قليلاً */
                padding: 8px 15px; /* تقليل المسافات الداخلية */
            }
            /* ضبط السهم ليبقى أفقي */
            .nav-link.dropdown-toggle::after {
                font-size: 10px; /* حجم أصغر للسهم */
            }
        }

        /* MEDIA QUERY للشاشات الصغيرة جدًا */
        @@media (max-width: 480px) {
            .nav-item .dropdown-menu {
                padding: 5px; /* تقليل الحواف */
            }

            .dropdown-item {
                font-size: 14px;
                padding: 6px 10px;
            }
        }

        ::-webkit-scrollbar {
            width: 5px; /* عرض شريط التمرير */
        }

        ::-webkit-scrollbar-thumb {
            background-color: #516f90; /* لون مقبض شريط التمرير */
            border-radius: 5px; /* جعل الأطراف دائرية */
            height: 10px; /* تحديد الطول الأدنى لمقبض شريط التمرير */
        }

            ::-webkit-scrollbar-thumb:hover {
                background-color: #1abc9c; /* تغيير لون المقبض عند التمرير */
            }

        /* يمكن إضافة ستايل لشريط التمرير إذا أردت تخصيص الخلفية */
        ::-webkit-scrollbar-track {
            background-color: #f1f1f1; /* خلفية شريط التمرير */
        }

